@model List<PhoneStore.Domain.Entities.Phone>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(135deg,#f1f5f9,#e0e7ff);
        font-family: "Segoe UI", system-ui;
    }

    .admin-header {
        background: linear-gradient(135deg,#6366f1,#7c3aed);
        color: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 20px 40px rgba(0,0,0,.15);
    }

    .admin-card {
        background: rgba(255,255,255,.9);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        box-shadow: 0 20px 45px rgba(0,0,0,.08);
        overflow: hidden;
    }

    table thead {
        background: #f8fafc;
    }

    table th {
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: .04em;
        color: #475569;
    }

    .price-badge {
        background: #6366f1;
        color: white;
        font-weight: 700;
        padding: 6px 14px;
        border-radius: 999px;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: .25s;
    }

        .action-btn.edit {
            background: #fef3c7;
            color: #b45309;
        }

        .action-btn.delete {
            background: #fee2e2;
            color: #b91c1c;
        }

        .action-btn:hover {
            transform: scale(1.15);
        }

    .add-btn {
        border-radius: 999px;
        padding: 12px 26px;
        font-weight: 700;
    }
</style>

<div class="container my-5">

    <!-- HEADER -->
    <div class="admin-header mb-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">📱 Phone Admin Panel</h2>
            <small class="opacity-75">Telefonlarni boshqarish</small>
        </div>

        <div class="d-flex gap-2">
            <a href="/Admin/PhoneCreate"
               class="btn btn-success add-btn shadow">
                <i class="bi bi-plus-circle"></i> Add Phone
            </a>

            <a href="/Account/Logout"
               class="btn btn-danger add-btn shadow">
                <i class="bi bi-box-arrow-right"></i>
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center rounded-4 shadow">
            🚫 Hozircha telefon yo‘q
        </div>
    }
    else
    {
        <!-- TABLE -->
        <div class="admin-card">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">#</th>
                        <th>Model</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-muted">@(i + 1)</td>

                            <td class="fw-semibold">
                                @Model[i].Name
                            </td>

                            <td>
                                <span class="price-badge">
                                    $@Model[i].Price
                                </span>
                            </td>

                            <td style="max-width:320px;">
                                <span class="text-muted">
                                    @(string.IsNullOrEmpty(Model[i].Description)
                                                                ? "No description"
                                                                : Model[i].Description)
                                </span>
                            </td>

                            <td class="text-end pe-4">
                                <a href="/Admin/PhoneEdit/@Model[i].Id"
                                   class="action-btn edit me-1"
                                   title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a href="/Admin/PhoneDelete/@Model[i].Id"
                                   class="action-btn delete"
                                   onclick="return confirm('Delete this phone?')"
                                   title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
