@model PhoneStore.Domain.Entities.Phone

<h2>Add Phone</h2>

<form asp-action="PhoneCreate" method="post">

    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Image URL</label>
        <input asp-for="ImageUrl"
               class="form-control"
               placeholder="https://..." />
    </div>

    <button type="submit" class="btn btn-success">
        Save
    </button>
</form>
