@model IEnumerable<PhoneStore.Domain.Entities.Phone>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(120deg, #f8fafc, #eef2ff);
        font-family: 'Segoe UI', system-ui, sans-serif;
        color: #0f172a;
    }

    .phone-card {
        background: #fff;
        border-radius: 22px;
        padding: 20px;
        height: 100%;
        box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        transition: 0.4s ease;
        position: relative;
        overflow: hidden;
    }

        .phone-card::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, transparent, rgba(99,102,241,0.08));
            opacity: 0;
            transition: 0.4s;
        }

        .phone-card:hover {
            transform: translateY(-12px) scale(1.02);
        }

            .phone-card:hover::before {
                opacity: 1;
            }

    .phone-img {
        text-align: center;
        margin-bottom: 15px;
    }

        .phone-img img {
            height: 210px;
            object-fit: contain;
            transition: transform 0.4s ease;
        }

    .phone-card:hover img {
        transform: rotate(-4deg) scale(1.08);
    }

    .badge-stock {
        display: inline-block;
        background: #ecfdf5;
        color: #059669;
        font-size: 11px;
        padding: 4px 10px;
        border-radius: 999px;
        font-weight: 600;
    }

    .phone-title {
        font-size: 15px;
        font-weight: 700;
        margin: 10px 0 5px;
    }

    .phone-specs {
        font-size: 12px;
        color: #64748b;
        display: flex;
        gap: 10px;
    }

    .price {
        font-size: 22px;
        font-weight: 800;
        color: #6366f1;
    }

    .old-price {
        font-size: small;
        text-decoration: line-through;
        color: #94a3b8;
    }

    .btn-cart {
        margin-top: 15px;
        width: 100%;
        padding: 12px;
        border-radius: 14px;
        background: #6366f1;
        border: none;
        color: white;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-cart:hover {
            background: #4f46e5;
            box-shadow: 0 10px 25px rgba(99,102,241,0.35);
        }

    .float-icons {
        position: absolute;
        top: 18px;
        right: 18px;
        display: flex;
        flex-direction: column;
        gap: 8px;
        z-index: 2;
    }

        .float-icons a {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: #f1f5f9;
            color: #334155;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
            text-decoration: none;
        }

            .float-icons a:hover {
                background: #6366f1;
                color: white;
            }
</style>

<div class="container py-5">
    <div class="row g-4">

        @foreach (var phone in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">

                <a asp-action="Details"
                   asp-route-id="@phone.Id"
                   style="text-decoration:none; color:inherit; display:block;">

                    <div class="phone-card">

                        <div class="float-icons">
                            <a href="#"><i class="bi bi-heart"></i></a>
                            <a href="#"><i class="bi bi-search"></i></a>
                        </div>

                        <div class="phone-img">
                            <img src="@phone.ImageUrl" alt="@phone.Name" class="img-fluid" />
                        </div>

                        <span class="badge-stock">MAVJUD</span>

                        <div class="phone-title">@phone.Name</div>

                        <div class="phone-specs">
                            <span>8/256 GB</span>
                            <span>5G</span>
                        </div>

                        <div class="d-flex align-items-center gap-2 mt-2">
                            <div class="price">$@phone.Price.ToString("N0")</div>
                            <div class="old-price">$@(phone.Price + 150)</div>
                        </div>

                        <button class="btn-cart" type="button">
                            <i class="bi bi-cart"></i> SAVATCHAGA
                        </button>

                    </div>
                </a>

            </div>
        }

    </div>
</div>
