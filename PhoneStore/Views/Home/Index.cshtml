@model IEnumerable<PhoneStore.Domain.Entities.Phone>

<style>
    .phone-card {
        transition: all 0.35s ease;
        border-radius: 18px;
        cursor: pointer;
        background: white;
    }

        .phone-card:hover {
            transform: translateY(-10px) scale(1.04);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.18);
        }

    .phone-image {
        transition: transform 0.35s ease;
    }

    .phone-card:hover .phone-image {
        transform: scale(1.08) rotate(-1deg);
    }
</style>

<div class="container mt-4">
    <h3 class="mb-4 fw-bold">Telefonlar</h3>

    <div class="row">
        @foreach (var phone in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card phone-card h-100">

                    <div class="phone-image d-flex align-items-center justify-content-center bg-light"
                         style="height:160px; border-top-left-radius:18px; border-top-right-radius:18px;">
                        <span class="text-muted">📱 Rasm</span>
                    </div>

                    <div class="card-body">
                        <h6 class="fw-bold">@phone.Name</h6>

                        <p class="small text-muted mb-2">
                            @phone.Description
                        </p>

                        <div class="fw-bold text-primary">
                            @phone.Price.ToString("N0") $
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
