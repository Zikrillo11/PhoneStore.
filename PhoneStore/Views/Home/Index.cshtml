@model IEnumerable<PhoneStore.Domain.Entities.Phone>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: #0f172a;
        color: #ffffff;
        font-family: 'Inter', sans-serif;
        min-height: 100vh;
    }

    /* Qidiruv qismi */
    .search-section {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 20px;
        margin-bottom: 40px;
    }

    .custom-input {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        color: white !important;
        border-radius: 12px !important;
        padding: 12px 20px;
    }

        .custom-input:focus {
            box-shadow: 0 0 15px rgba(56, 189, 248, 0.2) !important;
            border-color: #38bdf8 !important;
        }

    /* Karta dizayni (Yana biroz takomillashtirildi) */
    .glass-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 28px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .glass-card:hover {
            background: rgba(255, 255, 255, 0.08);
            transform: scale(1.05);
            border-color: rgba(56, 189, 248, 0.4);
        }

    .price-badge {
        background: linear-gradient(135deg, #0ea5e9, #6366f1);
        padding: 8px 15px;
        border-radius: 15px;
        font-weight: bold;
        letter-spacing: 0.5px;
    }

    /* Animatsiyali tugma */
    .btn-action {
        background: rgba(255, 255, 255, 0.1);
        border: none;
        color: white;
        width: 45px;
        height: 45px;
        border-radius: 12px;
        transition: 0.3s;
    }

        .btn-action:hover {
            background: #38bdf8;
            color: #000;
            transform: rotate(15deg);
        }
</style>

<div class="container py-5">

    <div class="search-section shadow-lg">
        <div class="row align-items-center">
            <div class="col-md-4">
                <h2 class="fw-bold m-0"><span style="color: #38bdf8;">Smart</span>Market</h2>
            </div>
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-0 text-secondary">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control custom-input" placeholder="Model bo'yicha qidirish...">
                </div>
            </div>
            <div class="col-md-3 text-end">
                <button class="btn btn-action me-2"><i class="bi bi-sliders"></i></button>
                <button class="btn btn-action"><i class="bi bi-heart"></i></button>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var phone in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card glass-card h-100 p-3">

                    <div class="text-center py-4 position-relative">
                        <div style="position: absolute; top: 0; left: 50%; transform: translateX(-50%); width: 120px; height: 120px; background: #38bdf8; filter: blur(60px); opacity: 0.15;"></div>
                        <span style="font-size: 5rem; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.5));">📱</span>
                    </div>

                    <div class="card-body p-2 mt-3">
                        <h5 class="fw-bold mb-1">@phone.Name</h5>
                        <p class="text-secondary small mb-4">@phone.Description</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="price-badge">
                                @phone.Price.ToString("N0") $
                            </div>
                            <button class="btn btn-action">
                                <i class="bi bi-bag-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>