@model IEnumerable<PhoneStore.Domain.Entities.Phone>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    :root {
        --primary: #00f2ff;
        --secondary: #7000ff;
        --bg-dark: #030712;
        --card-bg: rgba(17, 25, 40, 0.75);
    }

    body {
        background: var(--bg-dark);
        color: #fff;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    /* Karta konteyneri - Animatsiyali chegara uchun */
    .card-wrapper {
        position: relative;
        padding: 2px; /* Chegara qalinligi */
        border-radius: 24px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.05);
        transition: 0.4s;
    }

        /* Aylana neon nur effekti (Hoverda yonadi) */
        .card-wrapper::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: conic-gradient(transparent, transparent, transparent, var(--primary));
            animation: rotate 4s linear infinite;
            display: none;
        }

        .card-wrapper:hover::before {
            display: block;
        }

    @@keyframes rotate {
        100% {
            transform: rotate(360deg);
        }
    }

    .cyber-card {
        background: var(--card-bg);
        backdrop-filter: blur(16px);
        border-radius: 22px;
        height: 100%;
        position: relative;
        z-index: 1;
        border: none;
    }

    /* Rasm orqasidagi neon glow */
    .img-container {
        position: relative;
        z-index: 1;
    }

        .img-container::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 120px;
            height: 120px;
            background: var(--primary);
            filter: blur(50px);
            opacity: 0;
            transition: 0.5s;
            z-index: -1;
        }

    .card-wrapper:hover .img-container::after {
        opacity: 0.4;
    }

    /* Quick Action Buttons (Yashirin tugmalar) */
    .quick-actions {
        position: absolute;
        right: -50px;
        top: 20px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .card-wrapper:hover .quick-actions {
        right: 15px;
    }

    .action-circle {
        width: 38px;
        height: 38px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-decoration: none;
        transition: 0.3s;
    }

        .action-circle:hover {
            background: var(--primary);
            color: #000;
            transform: scale(1.1);
        }

    /* Skladda bor/yo'qligi indikatori */
    .status-dot {
        width: 8px;
        height: 8px;
        background: #10b981;
        border-radius: 50%;
        display: inline-block;
        margin-right: 5px;
        box-shadow: 0 0 10px #10b981;
    }

    .price-main {
        font-size: 1.5rem;
        font-weight: 800;
        letter-spacing: -1px;
    }

    /* Savatchaga qo'shish tugmasi */
    .btn-cyber-add {
        width: 100%;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        border: none;
        color: white;
        padding: 12px;
        border-radius: 12px;
        font-weight: 600;
        margin-top: 15px;
        transition: 0.3s;
        position: relative;
        overflow: hidden;
    }

        .btn-cyber-add:hover {
            filter: brightness(1.2);
            box-shadow: 0 5px 15px rgba(0, 242, 255, 0.4);
        }
</style>

<div class="container py-5">
    <div class="row g-4">
        @foreach (var phone in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card-wrapper">
                    <div class="card cyber-card p-3">

                        <div class="quick-actions">
                            <a href="#" class="action-circle"><i class="bi bi-heart"></i></a>
                            <a href="#" class="action-circle"><i class="bi bi-eye"></i></a>
                            <a href="#" class="action-circle"><i class="bi bi-shuffle"></i></a>
                        </div>

                        <div class="img-container text-center mb-3">
                            <img src="@phone.ImageUrl"
                                 class="phone-img img-fluid"
                                 style="height: 180px; object-fit: contain;"
                                 alt="@phone.Name">
                        </div>

                        <div class="card-body p-0">
                            <div class="d-flex align-items-center mb-1">
                                <span class="status-dot"></span>
                                <small class="text-success" style="font-size: 0.7rem;">INSTOCK</small>
                            </div>

                            <h5 class="fw-bold mb-1 text-truncate">@phone.Name</h5>
                            <p class="text-muted small mb-3" style="height: 40px; overflow: hidden;">
                                @phone.Description
                            </p>

                            <div class="d-flex justify-content-between align-items-end">
                                <div>
                                    <small class="text-secondary d-block" style="font-size: 0.7rem;">Price</small>
                                    <span class="price-main">$@phone.Price.ToString("N0")</span>
                                </div>
                                <div class="text-warning small">
                                    <i class="bi bi-star-fill"></i> 4.9
                                </div>
                            </div>

                            <button class="btn-cyber-add">
                                <i class="bi bi-cart-plus me-2"></i> SAVATCHAGA
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>