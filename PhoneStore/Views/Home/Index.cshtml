@model IEnumerable<PhoneStore.Domain.Entities.Phone>

<style>
    /* Umumiy fon va shrift */
    body {
        background-color: #f8f9fa;
        font-family: 'Inter', sans-serif;
    }

    /* Karta dizayni */
    .phone-card {
        border: none;
        border-radius: 20px;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        overflow: hidden;
        background: #ffffff;
    }

        .phone-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
        }

    /* Rasm joylashgan qism */
    .image-wrapper {
        position: relative;
        overflow: hidden;
        background: #f1f3f5;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .phone-image-icon {
        font-size: 3rem;
        transition: transform 0.4s ease;
    }

    .phone-card:hover .phone-image-icon {
        transform: scale(1.2) rotate(5deg);
    }

    /* Narx va tugmalar */
    .price-tag {
        font-size: 1.25rem;
        font-weight: 800;
        color: #2d3436;
    }

    .btn-buy {
        border-radius: 12px;
        padding: 8px 20px;
        font-weight: 600;
        transition: all 0.3s;
    }

    /* Tavsifni cheklash (3 qatordan ko'p bo'lsa qirqadi) */
    .description-text {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        font-size: 0.875rem;
        color: #636e72;
        height: 40px;
    }

    /* Badge (Yangi yoki Chegirma uchun) */
    .status-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        z-index: 10;
        padding: 5px 12px;
        border-radius: 30px;
        font-size: 0.7rem;
        text-transform: uppercase;
        font-weight: bold;
        backdrop-filter: blur(5px);
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <h2 class="fw-bold mb-1 text-dark">Smartfonlar Katalogi</h2>
            <p class="text-muted mb-0">Eng so'nggi texnologiyalar siz uchun</p>
        </div>
        <button class="btn btn-outline-primary btn-sm rounded-pill px-4">Hammasini ko'rish</button>
    </div>

    <div class="row g-4">
        @foreach (var phone in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card phone-card h-100 shadow-sm">
                    <div class="image-wrapper">
                        <span class="status-badge bg-primary text-white">Yangi</span>
                        <div class="phone-image-icon">📱</div>
                        @* Agar rasm bo'lsa: <img src="@phone.ImageUrl" class="img-fluid" alt="..."> *@
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold mb-2">@phone.Name</h5>

                        <p class="description-text mb-3">
                            @phone.Description
                        </p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price-tag">@phone.Price.ToString("N0") $</span>
                                <a href="#" class="btn btn-primary btn-buy shadow-sm">
                                    <i class="bi bi-cart-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>