@model IEnumerable<PhoneStore.Domain.Entities.Phone>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: #0f172a;
        color: #ffffff;
        font-family: 'Inter', sans-serif;
        min-height: 100vh;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        transition: 0.35s;
    }

        .glass-card:hover {
            transform: translateY(-6px) scale(1.03);
            border-color: #38bdf8;
        }

    .phone-img {
        width: 100%;
        height: 220px;
        object-fit: contain;
        background: #020617;
        border-radius: 16px;
        padding: 10px;
    }

    .price-badge {
        background: linear-gradient(135deg, #0ea5e9, #6366f1);
        padding: 6px 14px;
        border-radius: 14px;
        font-weight: bold;
    }

    .btn-action {
        background: rgba(255,255,255,0.1);
        border: none;
        width: 42px;
        height: 42px;
        border-radius: 12px;
        color: white;
        transition: 0.3s;
    }

        .btn-action:hover {
            background: #38bdf8;
            color: #000;
        }
</style>

<div class="container py-5">
    <div class="row g-4">

        @foreach (var phone in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card glass-card h-100 p-3">

                    <!-- 📸 RASM JOYI -->
                    <div class="text-center mb-3">
                        <img src="@phone.ImageUrl"
                             class="phone-img"
                             alt="Phone image"
                             onerror="this.onerror=null;
                                          this.src='https://via.placeholder.com/300x220/020617/ffffff?text=No+Image';" />
                    </div>

                    <div class="card-body p-1">
                        <h5 class="fw-bold mb-1">@phone.Name</h5>
                        <p class="text-secondary small mb-3">
                            @phone.Description
                        </p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="price-badge">
                                @phone.Price.ToString("N0") $
                            </div>

                            <button class="btn btn-action">
                                <i class="bi bi-bag-plus"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        }

    </div>
</div>
