@model IEnumerable<PhoneStore.Domain.Entities.Phone>

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(120deg,#f8fafc,#eef2ff);
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    /* HERO */
    .hero {
        padding: 70px 0;
        background: linear-gradient(135deg,#6366f1,#7c3aed);
        color: white;
        border-radius: 0 0 60px 60px;
        text-align: center;
        margin-bottom: 40px;
    }


        .hero h1 {
            font-size: 3rem;
            font-weight: 900;
        }

        .hero span {
            color: #fde047;
        }

    .hero-search {
        max-width: 420px;
        margin: 30px auto 0;
        display: flex;
        background: white;
        border-radius: 16px;
        overflow: hidden;
    }

        .hero-search input {
            flex: 1;
            border: none;
            padding: 14px 16px;
            outline: none;
        }

        .hero-search button {
            border: none;
            background: #6366f1;
            color: white;
            padding: 0 20px;
        }


    /* CARD */
    .phone-card {
        background: white;
        border-radius: 22px;
        padding: 16px;
        box-shadow: 0 20px 40px rgba(0,0,0,.08);
        transition: .3s;
        position: relative;
    }

        .phone-card:hover {
            transform: translateY(-8px);
        }

    .icons {
        position: absolute;
        top: 14px;
        right: 14px;
        display: flex;
        gap: 6px;
        z-index: 2;
    }

        .icons i {
            width: 34px;
            height: 34px;
            background: #f1f5f9;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

            .icons i:hover {
                background: #6366f1;
                color: white;
            }

    .phone-img {
        text-align: center;
        margin: 20px 0;
    }

        .phone-img img {
            height: 180px;
            object-fit: contain;
        }

    .phone-name {
        font-weight: 700;
        margin-top: 10px;
    }

    .price {
        font-size: 22px;
        font-weight: 800;
        color: #6366f1;
    }

    .btn-cart {
        margin-top: 14px;
        width: 100%;
        padding: 12px;
        border-radius: 14px;
        border: none;
        background: #6366f1;
        color: white;
        font-weight: 600;
        cursor: pointer;
    }

    /* CART */
    .cart {
        margin: 60px auto;
        background: white;
        border-radius: 22px;
        padding: 25px;
        box-shadow: 0 20px 50px rgba(0,0,0,.12);
        max-width: 900px;
    }

    .cart-item {
        display: flex;
        align-items: center;
        gap: 15px;
        border-bottom: 1px solid #e5e7eb;
        padding: 12px 0;
    }

        .cart-item img {
            width: 60px;
            height: 60px;
            object-fit: contain;
        }

    .cart-remove {
        margin-left: auto;
        border: none;
        background: none;
        color: red;
        font-size: 18px;
        cursor: pointer;
    }
    .sort-btn {
    padding: 10px 16px;
    border-radius: 12px;
    border: none;
    background: white;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 6px 18px rgba(0,0,0,.15);
    transition: .25s;
}

.sort-btn:hover {
    background: #6366f1;
    color: white;
}

</style>

<!-- HERO -->
<section class="hero">
    <h1>Top <span>Smartfonlar</span></h1>
    <p>Qidir · tanla · savatchaga qo‘sh</p>

    <div class="hero-search">
        <input type="text" id="searchInput" placeholder="Telefon qidirish...">
        <button><i class="bi bi-search"></i></button>
    </div>
</section>

<!-- PHONES -->
<div class="container">
    <div class="row g-4" id="phoneList">

        @foreach (var phone in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 phone-item"
                 data-name="@phone.Name.ToLower()">

                <div class="phone-card">

                    <div class="icons">
                        <i class="bi bi-heart" onclick="alert('Like bosildi')"></i>
                        <i class="bi bi-eye" onclick="alert('@phone.Name')"></i>
                    </div>

                    <div class="phone-img">
                        <img src="@phone.ImageUrl">
                    </div>

                    <div class="phone-name">@phone.Name</div>
                    <div class="price">$@phone.Price</div>

                    <button class="btn-cart"
                            onclick="addToCart('@phone.Name','@phone.Price','@phone.ImageUrl')">
                        <i class="bi bi-cart3"></i> Savatchaga
                    </button>

                </div>
            </div>
        }

    </div>
</div>

<!-- CART -->
<div class="cart">
    <h3>🛒 Savatcha</h3>
    <div id="cartItems">Savatcha bo‘sh</div>
</div>

<script>
    /* SEARCH */
    document.getElementById("searchInput").addEventListener("keyup", function () {
        const q = this.value.toLowerCase();
        document.querySelectorAll(".phone-item").forEach(p => {
            p.style.display = p.dataset.name.includes(q) ? "block" : "none";
        });
    });

    /* CART */
    let cart = [];

    function addToCart(name, price, img) {
        cart.push({ name, price, img });
        renderCart();
    }

    function removeItem(i) {
        cart.splice(i, 1);
        renderCart();
    }

    function renderCart() {
        let box = document.getElementById("cartItems");
        if (cart.length === 0) {
            box.innerHTML = "Savatcha bo‘sh";
            return;
        }

        box.innerHTML = "";
        cart.forEach((x, i) => {
            box.innerHTML += `
                <div class="cart-item">
                    <img src="${x.img}">
                    <div>
                        <b>${x.name}</b><br>$${x.price}
                    </div>
                    <button class="cart-remove" onclick="removeItem(${i})">✖</button>
                </div>`;
        });
    }
</script>


